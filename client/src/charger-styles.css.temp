    border-bottom-left-radius: 45px;
    border-bottom-right-radius: 45px;
    padding: 30px 25px;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    color: #2D3748;
    box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.4);

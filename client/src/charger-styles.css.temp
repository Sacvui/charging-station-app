/* ===== PAGE TRANSITION STYLES =====  */

/* Page Transition Container  */

.page-transition-container {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
}

.page-content {
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    transform: translateX(0);
    opacity: 1;
}

.page-transition-container.transitioning .page-content {
    transform: translateX(-20px);
    opacity: 0;
}

/* Transition Overlay  */

.page-transition-overlay {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: linear-gradient(135deg, rgba(224, 179, 255, 0.95), rgba(179, 224, 255, 0.95));
    backdrop-filter: blur(10px);
    z-index: 9999;
    display: flex;
    justify-content: center;
    align-items: center;
    animation: overlayFadeIn 0.3s ease-out;
}

.transition-loader {
    text-align: center;
    color: #2D3748;
}

.loader-circle {
    width: 40px;
    height: 40px;
    border: 3px solid rgba(45, 55, 72, 0.2);
    border-top: 3px solid #2D3748;
    border-radius: 50%;
    animation: spin 1s linear infinite;
    margin: 0 auto 1rem auto;
}

.loader-text {
    font-size: 16px;
    font-weight: 500;
    color: #2D3748;
}

@keyframes overlayFadeIn {
    from { opacity: 0; }
    to { opacity: 1; }
}

@keyframes spin {
    0% { transform: rotate(0deg); }
    100% { transform: rotate(360deg); }
}

/* Body Transition Classes  */
body.page-transitioning-out {
    overflow: hidden;
}

body.page-transitioning-out .main-content {
    animation: slideOutLeft 0.3s ease-in forwards;
}

body.page-transitioning-in .main-content {
    animation: slideInRight 0.3s ease-out forwards;
}

@keyframes slideOutLeft {
    from {
        transform: translateX(0);
        opacity: 1;
    }
    to {
        transform: translateX(-100px);
        opacity: 0;
    }
}

@keyframes slideInRight {
    from {
        transform: translateX(100px);
        opacity: 0;
    }
    to {
        transform: translateX(0);
        opacity: 1;
    }
}

/* Button Loading States  */

.btn-loading {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
}

.loading-spinner {
    width: 16px;
    height: 16px;
    border: 2px solid rgba(255, 255, 255, 0.3);
    border-top: 2px solid #ffffff;
    border-radius: 50%;
    animation: spin 0.8s linear infinite;
}

/* Enhanced Button Transitions  */

.onboarding-btn {
    position: relative;
    overflow: hidden;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.onboarding-btn:disabled {
    opacity: 0.7;
    cursor: not-allowed;
    transform: none !important;
}

.onboarding-btn:not(:disabled):hover {
    transform: translateY(-2px);
}

.onboarding-btn:not(:disabled):active {
    transform: translateY(0);
}

/* Ripple Effect  */

.onboarding-btn::after {
    content: '';
    position: absolute;
    top: 50%;
    left: 50%;
    width: 0;
    height: 0;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    transform: translate(-50%, -50%);
    transition: width 0.3s ease, height 0.3s ease;
}

.onboarding-btn:active::after {
    width: 300px;
    height: 300px;
}

/* Page Enter/Exit Animations  */

.page-enter {
    opacity: 0;
    transform: translateX(100px);
}

.page-enter-active {
    opacity: 1;
    transform: translateX(0);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

.page-exit {
    opacity: 1;
    transform: translateX(0);
}

.page-exit-active {
    opacity: 0;
    transform: translateX(-100px);
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
}

/* Smooth App Container Transitions  */

.onboarding-app-container {
    transition: all 0.4s cubic-bezier(0.4, 0, 0.2, 1);
}

.onboarding-app-container.transitioning {
    transform: scale(0.95);
    opacity: 0.8;
}

/* Enhanced Status Bar Animation  */

.onboarding-status-bar {
    animation: statusBarSlideIn 0.5s ease-out 0.2s both;
}

@keyframes statusBarSlideIn {
    from {
        opacity: 0;
        transform: translateY(-20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Enhanced Hero Section Animation  */

.onboarding-hero-section {
    animation: heroFadeIn 0.6s ease-out 0.4s both;
}

@keyframes heroFadeIn {
    from {
        opacity: 0;
        transform: translateY(30px) scale(0.9);
    }
    to {
        opacity: 1;
        transform: translateY(0) scale(1);
    }
}

/* Enhanced Text Content Animation  */

.onboarding-text-content {
    animation: textSlideUp 0.5s ease-out 0.6s both;
}

@keyframes textSlideUp {
    from {
        opacity: 0;
        transform: translateY(20px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Enhanced Actions Animation  */

.onboarding-actions {
    animation: actionsSlideUp 0.5s ease-out 0.8s both;
}

@keyframes actionsSlideUp {
    from {
        opacity: 0;
        transform: translateY(30px);
    }
    to {
        opacity: 1;
        transform: translateY(0);
    }
}

/* Enhanced Footer Animation  */

.onboarding-footer {
    animation: footerFadeIn 0.4s ease-out 1s both;
}

@keyframes footerFadeIn {
    from {
        opacity: 0;
    }
    to {
        opacity: 0.7;
    }
}

/* Mobile Optimizations  */

@media (max-width: 768px) {
    .page-transition-overlay {
        backdrop-filter: blur(5px);
    }
    
    .loader-circle {
        width: 32px;
        height: 32px;
        border-width: 2px;
    }
    
    .loader-text {
        font-size: 14px;
    }
    
    @keyframes slideOutLeft {
        from {
            transform: translateX(0);
            opacity: 1;
        }
        to {
            transform: translateX(-50px);
            opacity: 0;
        }
    }
    
    @keyframes slideInRight {
        from {
            transform: translateX(50px);
            opacity: 0;
        }
        to {
            transform: translateX(0);
            opacity: 1;
        }
    }
}

/* ===== AUTH PAGES STYLES (LOGIN & REGISTER) =====  */


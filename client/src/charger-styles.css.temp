/* ===== CHARGER TYPES & PRICING STYLES =====  */

.charger-types-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 1.5rem;
    margin-top: 1rem;
}

.charger-type-card {
    background: rgba(255, 255, 255, 0.05);
    border: 2px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 0;
    transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    cursor: pointer;
    overflow: hidden;
    position: relative;
}

.charger-type-card:hover {
    border-color: rgba(102, 126, 234, 0.4);
    transform: translateY(-2px);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.4);
}

.charger-type-card.selected {
    border-color: var(--ios-blue);
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.1), rgba(59, 130, 246, 0.05));
    box-shadow: 0 0 0 1px rgba(102, 126, 234, 0.3), 0 8px 25px rgba(102, 126, 234, 0.2);
}

.charger-type-card.selected::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--ios-blue), var(--ios-teal));
}

.charger-power-badge {
    position: absolute;
    top: 1rem;
    right: 1rem;
    background: linear-gradient(135deg, var(--ios-orange), var(--ios-red));
    color: #ffffff;
    padding: 0.25rem 0.75rem;
    border-radius: 20px;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.5px;
    z-index: 2;
}

.charger-header {
    display: flex;
    align-items: flex-start;
    gap: 1rem;
    padding: 1.5rem;
    cursor: pointer;
    position: relative;
}

.charger-checkbox {
    position: absolute;
    opacity: 0;
    pointer-events: none;
}

.charger-icon {
    font-size: 2.5rem;
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.2), rgba(59, 130, 246, 0.1));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-shrink: 0;
    transition: all 0.3s ease;
    border: 2px solid rgba(102, 126, 234, 0.3);
}

.charger-type-card.selected .charger-icon {
    background: linear-gradient(135deg, var(--ios-blue), var(--ios-teal));
    border-color: rgba(255, 255, 255, 0.3);
    transform: scale(1.05);
}

.charger-info {
    flex: 1;
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.charger-name {
    font-size: 1.2rem;
    font-weight: 700;
    color: #ffffff;
    margin: 0;
}

.charger-desc {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.4;
}

.charger-time {
    font-size: 0.85rem;
    color: var(--ios-green);
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.25rem;
}

.vehicle-indicators {
    display: flex;
    gap: 0.5rem;
    margin-top: 0.5rem;
}

.vehicle-indicator {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 20px;
    padding: 0.25rem 0.75rem;
    font-size: 0.75rem;
    color: rgba(255, 255, 255, 0.8);
}

.charger-type-card.selected .vehicle-indicator {
    background: rgba(255, 255, 255, 0.15);
    border-color: rgba(255, 255, 255, 0.3);
    color: #ffffff;
}

.check-indicator {
    width: 24px;
    height: 24px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.8rem;
    color: transparent;
    transition: all 0.3s ease;
    flex-shrink: 0;
}

.charger-type-card.selected .check-indicator {
    background: var(--ios-green);
    border-color: var(--ios-green);
    color: #ffffff;
    transform: scale(1.1);
}

.charger-price-section {
    padding: 0 1.5rem 1.5rem 1.5rem;
    border-top: 1px solid rgba(255, 255, 255, 0.1);
    background: rgba(0, 0, 0, 0.2);
    animation: slideDown 0.3s ease-out;
}

@keyframes slideDown {
    from {
        opacity: 0;
        transform: translateY(-10px);
    }

    to {
        opacity: 1;
        transform: translateY(0);
    }
}

.price-label {
    display: flex;
    align-items: center;
    gap: 0.5rem;
    font-size: 0.9rem;
    font-weight: 600;
    color: rgba(255, 255, 255, 0.8);
    margin: 1rem 0 0.5rem 0;
}

.recommended-price {
    background: linear-gradient(135deg, var(--ios-green), #059669);
    color: #ffffff;
    padding: 0.25rem 0.75rem;
    border-radius: 12px;
    font-size: 0.75rem;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.25rem;
}

.price-input-group {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.price-input-container {
    position: relative;
}

.price-input-container::before {
    content: 'VNÄ';
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    color: rgba(255, 255, 255, 0.5);
    font-size: 0.9rem;
    pointer-events: none;
}

.price-input {
    background: rgba(255, 255, 255, 0.1);
    border: 1px solid rgba(255, 255, 255, 0.2);
    border-radius: 8px;
    padding: 0.75rem 3rem 0.75rem 1rem;
    color: #ffffff;
    font-size: 1rem;
    font-weight: 600;
    transition: all 0.2s ease;
    width: 100%;
}

.price-input:focus {
    outline: none;
    border-color: var(--ios-blue);
    background: rgba(255, 255, 255, 0.15);
    box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.2);
}

.price-input::placeholder {
    color: rgba(255, 255, 255, 0.5);
}

.price-range {
    font-size: 0.8rem;
    color: rgba(255, 255, 255, 0.6);
    font-style: italic;
}

.price-input[type="number"] {
    appearance: textfield;
    -moz-appearance: textfield;
}

.price-input[type="number"]::-webkit-outer-spin-button,
.price-input[type="number"]::-webkit-inner-spin-button {
    -webkit-appearance: none;
    margin: 0;
}

.charger-types-section .section-title {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    margin-bottom: 0.5rem;
}

.charger-types-section .field-hint {
    background: rgba(59, 130, 246, 0.1);
    border: 1px solid rgba(59, 130, 246, 0.2);
    border-radius: 12px;
    padding: 1rem;
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
    line-height: 1.5;
    margin-bottom: 1.5rem;
}

.charger-selection-counter {
    background: linear-gradient(135deg, var(--ios-blue), var(--ios-teal));
    color: #ffffff;
    padding: 0.5rem 1rem;
    border-radius: 12px;
    font-size: 0.9rem;
    font-weight: 600;
    display: inline-flex;
    align-items: center;
    gap: 0.5rem;
    margin-bottom: 1rem;
}

.pricing-summary {
    background: linear-gradient(135deg, rgba(34, 197, 94, 0.1), rgba(16, 185, 129, 0.05));
    border: 1px solid rgba(34, 197, 94, 0.2);
    border-radius: 12px;
    padding: 1rem;
    margin-top: 1.5rem;
}

.pricing-summary-title {
    font-size: 1rem;
    font-weight: 600;
    color: var(--ios-green);
    margin: 0 0 0.75rem 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.pricing-summary-list {
    display: flex;
    flex-direction: column;
    gap: 0.5rem;
}

.pricing-summary-item {
    display: flex;
    justify-content: space-between;
    align-items: center;
    font-size: 0.9rem;
}

.pricing-summary-charger {
    color: rgba(255, 255, 255, 0.8);
}

.pricing-summary-price {
    color: var(--ios-green);
    font-weight: 600;
}

.revenue-estimate {
    background: linear-gradient(135deg, rgba(255, 193, 7, 0.1), rgba(255, 152, 0, 0.05));
    border: 1px solid rgba(255, 193, 7, 0.3);
    border-radius: 12px;
    padding: 1rem;
    margin-top: 1rem;
}

.revenue-estimate-title {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--ios-yellow);
    margin: 0 0 0.5rem 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.revenue-estimate-text {
    font-size: 0.85rem;
    color: rgba(255, 255, 255, 0.7);
    line-height: 1.4;
}

@media (max-width: 768px) {
    .charger-types-grid {
        grid-template-columns: 1fr;
        gap: 1rem;
    }

    .charger-header {
        padding: 1rem;
        gap: 0.75rem;
    }

    .charger-icon {
        width: 50px;
        height: 50px;
        font-size: 2rem;
    }

    .charger-name {
        font-size: 1.1rem;
    }

    .charger-price-section {
        padding: 0 1rem 1rem 1rem;
    }

    .charger-power-badge {
        position: static;
        margin-top: 0.5rem;
        align-self: flex-start;
    }

    .vehicle-indicators {
        justify-content: center;
    }
}

@media (max-width: 480px) {
    .charger-types-grid {
        gap: 0.75rem;
    }

    .charger-header {
        flex-direction: column;
        text-align: center;
        gap: 1rem;
    }

    .charger-icon {
        align-self: center;
    }

    .check-indicator {
        align-self: center;
    }

    .pricing-summary {
        margin-top: 1rem;
    }
}

/* ===== STATION DETAIL PRICING STYLES =====  */

.pricing-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 16px;
    padding: 1.5rem;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
}

.pricing-card:hover {
    border-color: rgba(102, 126, 234, 0.3);
    box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
}

.pricing-card h3 {
    color: #ffffff;
    font-size: 1.2rem;
    font-weight: 700;
    margin: 0 0 1.5rem 0;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.pricing-item {
    background: rgba(255, 255, 255, 0.03);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 12px;
    padding: 1.25rem;
    display: flex;
    justify-content: space-between;
    align-items: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.pricing-item::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--ios-blue), var(--ios-teal));
    opacity: 0;
    transition: opacity 0.3s ease;
}

.pricing-item:hover {
    border-color: rgba(102, 126, 234, 0.3);
    background: rgba(255, 255, 255, 0.08);
    transform: translateY(-2px);
}

.pricing-item:hover::before {
    opacity: 1;
}

.charger-type {
    display: flex;
    align-items: center;
    gap: 1rem;
    flex: 1;
}

.pricing-item .charger-icon {
    width: 50px;
    height: 50px;
    background: linear-gradient(135deg, rgba(102, 126, 234, 0.2), rgba(59, 130, 246, 0.1));
    border: 2px solid rgba(102, 126, 234, 0.3);
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 1.5rem;
    transition: all 0.3s ease;
}

.pricing-item:hover .charger-icon {
    background: linear-gradient(135deg, var(--ios-blue), var(--ios-teal));
    border-color: rgba(255, 255, 255, 0.3);
    transform: scale(1.05);
}

.charger-type strong {
    color: #ffffff;
    font-size: 1.1rem;
    font-weight: 600;
}

.price-value {
    text-align: right;
    display: flex;
    flex-direction: column;
    align-items: flex-end;
    gap: 0.25rem;
}

.price-value > div:first-child {
    color: var(--ios-green);
    font-size: 1.3rem;
    font-weight: 700;
    line-height: 1;
}

.price-unit {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.85rem;
    font-weight: 500;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* Power Badge for Pricing Items  */

.pricing-item .power-badge {
    position: absolute;
    top: 0.75rem;
    right: 0.75rem;
    background: linear-gradient(135deg, var(--ios-orange), var(--ios-red));
    color: #ffffff;
    padding: 0.2rem 0.6rem;
    border-radius: 12px;
    font-size: 0.7rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 0.3px;
    z-index: 2;
}

/* Enhanced Charger Type Names  */

.pricing-item .charger-type-details {
    display: flex;
    flex-direction: column;
    gap: 0.25rem;
}

.pricing-item .charger-type-name {
    color: #ffffff;
    font-size: 1.1rem;
    font-weight: 600;
    margin: 0;
}

.pricing-item .charger-type-specs {
    color: rgba(255, 255, 255, 0.7);
    font-size: 0.85rem;
    display: flex;
    align-items: center;
    gap: 0.5rem;
}

.pricing-item .charging-speed {
    background: rgba(34, 197, 94, 0.2);
    color: var(--ios-green);
    padding: 0.15rem 0.5rem;
    border-radius: 8px;
    font-size: 0.75rem;
    font-weight: 500;
}

/* Responsive Design for Pricing Cards  */

@media (max-width: 768px) {
    .pricing-card {
        padding: 1rem;
    }

    .pricing-item {
        flex-direction: column;
        text-align: center;
        gap: 1rem;
        padding: 1rem;
    }

    .charger-type {
        flex-direction: column;
        gap: 0.75rem;
    }

    .pricing-item .charger-icon {
        width: 60px;
        height: 60px;
        font-size: 1.8rem;
    }

    .price-value {
        align-items: center;
    }

    .price-value > div:first-child {
        font-size: 1.5rem;
    }
}

@media (max-width: 480px) {
    .pricing-card h3 {
        font-size: 1.1rem;
    }

    .pricing-item {
        padding: 0.75rem;
    }

    .charger-type strong {
        font-size: 1rem;
    }

    .price-value > div:first-child {
        font-size: 1.2rem;
    }
}

/* ===== ENHANCED HOME PAGE STYLES =====  */

.home-guest {
    min-height: 100vh;
    background: linear-gradient(135deg, #0f0f23 0%, #1a1a2e 50%, #16213e 100%);
    position: relative;
    overflow-x: hidden;
}

/* Hero Section  */

.hero-section {
    position: relative;
    min-height: 100vh;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem;
}

.hero-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
}

.hero-gradient {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 30% 20%, rgba(102, 126, 234, 0.3) 0%, transparent 50%),
                radial-gradient(circle at 70% 80%, rgba(59, 130, 246, 0.2) 0%, transparent 50%);
}

.hero-particles {
    position: absolute;
    width: 100%;
    height: 100%;
}

.particle {
    position: absolute;
    width: 4px;
    height: 4px;
    background: rgba(102, 126, 234, 0.6);
    border-radius: 50%;
    animation: float 6s ease-in-out infinite;
}

.particle:nth-child(1) {
    top: 20%;
    left: 20%;
    animation-delay: 0s;
}

.particle:nth-child(2) {
    top: 60%;
    right: 30%;
    animation-delay: 2s;
}

.particle:nth-child(3) {
    bottom: 30%;
    left: 60%;
    animation-delay: 4s;
}

@keyframes float {
    0%, 100% { transform: translateY(0px) rotate(0deg); opacity: 0.7; }
    50% { transform: translateY(-20px) rotate(180deg); opacity: 1; }
}

.hero-content {
    text-align: center;
    max-width: 800px;
    z-index: 2;
    position: relative;
}

.hero-logo {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 1rem;
    margin-bottom: 2rem;
}

.logo-icon {
    font-size: 3rem;
    background: linear-gradient(135deg, var(--ios-blue), var(--ios-teal));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: pulse 2s ease-in-out infinite;
}

.logo-text {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #ffffff, rgba(255, 255, 255, 0.8));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

@keyframes pulse {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
}

.hero-title {
    font-size: 3.5rem;
    font-weight: 800;
    color: #ffffff;
    margin: 0 0 1rem 0;
    line-height: 1.2;
}

.title-highlight {
    display: block;
    background: linear-gradient(135deg, var(--ios-blue), var(--ios-teal));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    font-size: 0.8em;
    margin-top: 0.5rem;
}

.hero-subtitle {
    font-size: 1.2rem;
    color: rgba(255, 255, 255, 0.8);
    margin: 0 0 3rem 0;
    line-height: 1.6;
    max-width: 600px;
    margin-left: auto;
    margin-right: auto;
}

.hero-stats {
    display: flex;
    justify-content: center;
    gap: 3rem;
    margin-bottom: 3rem;
}

.stat-item {
    text-align: center;
}

.stat-number {
    font-size: 2.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, var(--ios-green), var(--ios-teal));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    line-height: 1;
}

.stat-label {
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
    margin-top: 0.5rem;
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

.hero-actions {
    display: flex;
    gap: 1.5rem;
    justify-content: center;
    flex-wrap: wrap;
}

.btn-hero-primary {
    position: relative;
    background: linear-gradient(135deg, var(--ios-blue), var(--ios-teal));
    color: #ffffff;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    transition: all 0.3s ease;
    overflow: hidden;
    box-shadow: 0 8px 25px rgba(102, 126, 234, 0.3);
}

.btn-hero-primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 12px 35px rgba(102, 126, 234, 0.4);
}

.btn-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
}

.btn-hero-primary:hover .btn-shine {
    left: 100%;
}

.btn-hero-secondary {
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.2);
    color: #ffffff;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
}

.btn-hero-secondary:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(-2px);
}

/* Features Section  */

.features-section {
    padding: 6rem 2rem;
    background: rgba(255, 255, 255, 0.02);
    backdrop-filter: blur(10px);
}

.section-header {
    text-align: center;
    margin-bottom: 4rem;
}

.section-header h2 {
    font-size: 2.5rem;
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 1rem 0;
}

.section-header p {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.7);
    margin: 0;
}

.features-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(350px, 1fr));
    gap: 2rem;
    max-width: 1200px;
    margin: 0 auto;
}

.feature-card {
    background: rgba(255, 255, 255, 0.05);
    border: 1px solid rgba(255, 255, 255, 0.1);
    border-radius: 20px;
    padding: 2rem;
    text-align: center;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.feature-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 2px;
    background: linear-gradient(90deg, var(--ios-blue), var(--ios-teal));
    opacity: 0;
    transition: opacity 0.3s ease;
}

.feature-card:hover {
    transform: translateY(-5px);
    border-color: rgba(102, 126, 234, 0.3);
    box-shadow: 0 15px 35px rgba(0, 0, 0, 0.2);
}

.feature-card:hover::before {
    opacity: 1;
}

.feature-icon-wrapper {
    position: relative;
    display: inline-block;
    margin-bottom: 1.5rem;
}

.feature-icon {
    font-size: 3rem;
    background: linear-gradient(135deg, var(--ios-blue), var(--ios-teal));
    -webkit-background-clip: text;

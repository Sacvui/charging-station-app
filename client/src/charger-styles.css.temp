}

.auth-signal span:nth-child(1) { height: 4px; }
.auth-signal span:nth-child(2) { height: 6px; }
.auth-signal span:nth-child(3) { height: 8px; }
.auth-signal span:nth-child(4) { height: 10px; }

.auth-battery {

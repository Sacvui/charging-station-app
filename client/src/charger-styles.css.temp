/* ===== ONBOARDING SCREEN STYLES =====  */

.onboarding-container {
    min-height: 100vh;
    position: relative;
    overflow: hidden;
    display: flex;
    flex-direction: column;
    opacity: 0;
    transform: translateY(20px);
    transition: all 0.8s ease;
}

.onboarding-container.visible {
    opacity: 1;
    transform: translateY(0);
}

/* Background  */

.onboarding-background {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 1;
}

.bg-gradient {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    transition: all 0.8s ease;
}

.bg-pattern {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    overflow: hidden;
}

.pattern-char {
    position: absolute;
    font-size: 2rem;
    opacity: 0.1;
    animation: floatPattern 8s ease-in-out infinite;
    pointer-events: none;
}

@keyframes floatPattern {
    0%, 100% { 
        transform: translateY(0px) rotate(0deg); 
        opacity: 0.1; 
    }
    50% { 
        transform: translateY(-30px) rotate(180deg); 
        opacity: 0.3; 
    }
}

/* Header  */

.onboarding-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 2rem;
    z-index: 10;
    position: relative;
}

.app-logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
}

.logo-icon {
    font-size: 2rem;
    background: linear-gradient(135deg, #ffffff, rgba(255, 255, 255, 0.8));
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
    animation: logoGlow 2s ease-in-out infinite;
}

.logo-text {
    font-size: 1.5rem;
    font-weight: 800;
    color: #ffffff;
    text-shadow: 0 2px 10px rgba(0, 0, 0, 0.3);
}

@keyframes logoGlow {
    0%, 100% { transform: scale(1); }
    50% { transform: scale(1.1); }
}

.skip-btn {
    color: rgba(255, 255, 255, 0.8);
    text-decoration: none;
    padding: 0.5rem 1rem;
    border-radius: 20px;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
    font-weight: 500;
}

.skip-btn:hover {
    background: rgba(255, 255, 255, 0.2);
    color: #ffffff;
}

/* Main Content  */

.onboarding-content {
    flex: 1;
    display: flex;
    flex-direction: column;
    justify-content: center;
    padding: 2rem;
    z-index: 10;
    position: relative;
}

.slide-container {
    position: relative;
    height: 500px;
    margin-bottom: 3rem;
}

.slide {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    display: flex;
    flex-direction: column;
    align-items: center;
    text-align: center;
    opacity: 0;
    transform: translateX(100px);
    transition: all 0.6s cubic-bezier(0.4, 0, 0.2, 1);
}

.slide.active {
    opacity: 1;
    transform: translateX(0);
}

.slide.prev {
    transform: translateX(-100px);
}

.slide.next {
    transform: translateX(100px);
}

/* Slide Icon  */

.slide-icon {
    margin-bottom: 2rem;
}

.icon-wrapper {
    position: relative;
    display: inline-block;
}

.main-icon {
    font-size: 5rem;
    display: block;
    position: relative;
    z-index: 2;
    animation: iconFloat 3s ease-in-out infinite;
}

.icon-glow {
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    width: 120px;
    height: 120px;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
    border-radius: 50%;
    animation: glowPulse 2s ease-in-out infinite;
}

@keyframes iconFloat {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
}

@keyframes glowPulse {
    0%, 100% { opacity: 0.3; transform: translate(-50%, -50%) scale(1); }
    50% { opacity: 0.6; transform: translate(-50%, -50%) scale(1.1); }
}

/* Slide Text  */

.slide-text {
    max-width: 600px;
}

.slide-subtitle {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
    font-weight: 600;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 0.5rem;
}

.slide-title {
    font-size: 2.5rem;
    font-weight: 800;
    color: #ffffff;
    margin: 0 0 1.5rem 0;
    line-height: 1.2;
    text-shadow: 0 2px 20px rgba(0, 0, 0, 0.3);
}

.slide-description {
    font-size: 1.1rem;
    color: rgba(255, 255, 255, 0.9);
    line-height: 1.6;
    margin: 0 0 2rem 0;
}

.slide-features {
    display: flex;
    flex-direction: column;
    gap: 0.75rem;
    align-items: center;
}

.feature-item {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    background: rgba(255, 255, 255, 0.1);
    padding: 0.75rem 1.5rem;
    border-radius: 25px;
    backdrop-filter: blur(10px);
    transition: all 0.3s ease;
}

.feature-item:hover {
    background: rgba(255, 255, 255, 0.2);
    transform: translateY(-2px);
}

.feature-check {
    color: #4ade80;
    font-weight: bold;
    font-size: 1.1rem;
}

.feature-text {
    color: #ffffff;
    font-weight: 500;
}

/* Navigation  */

.slide-navigation {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 2rem;
    margin-bottom: 2rem;
}

.nav-btn {
    width: 50px;
    height: 50px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.2);
    color: #ffffff;
    font-size: 1.2rem;
    cursor: pointer;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
}

.nav-btn:hover:not(:disabled) {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.4);
    transform: scale(1.1);
}

.nav-btn:disabled {
    opacity: 0.3;
    cursor: not-allowed;
}

.slide-indicators {
    display: flex;
    gap: 0.75rem;
}

.indicator {
    width: 12px;
    height: 12px;
    border-radius: 50%;
    background: rgba(255, 255, 255, 0.3);
    border: none;
    cursor: pointer;
    transition: all 0.3s ease;
}

.indicator.active {
    background: #ffffff;
    transform: scale(1.3);
}

.indicator:hover {
    background: rgba(255, 255, 255, 0.6);
}

/* Bottom Actions  */

.onboarding-actions {
    padding: 2rem;
    z-index: 10;
    position: relative;
}

.final-actions {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    align-items: center;
}

.btn-get-started {
    position: relative;
    background: linear-gradient(135deg, #4ade80, #22c55e);
    color: #ffffff;
    padding: 1.2rem 3rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.1rem;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    transition: all 0.3s ease;
    overflow: hidden;
    box-shadow: 0 10px 30px rgba(34, 197, 94, 0.3);
    min-width: 250px;
    justify-content: center;
}

.btn-get-started:hover {
    transform: translateY(-3px);
    box-shadow: 0 15px 40px rgba(34, 197, 94, 0.4);
}

.btn-shine {
    position: absolute;
    top: 0;
    left: -100%;
    width: 100%;
    height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
    transition: left 0.5s ease;
}

.btn-get-started:hover .btn-shine {
    left: 100%;
}

.btn-login {
    background: rgba(255, 255, 255, 0.1);
    border: 2px solid rgba(255, 255, 255, 0.2);
    color: #ffffff;
    padding: 1rem 2.5rem;
    border-radius: 50px;
    text-decoration: none;
    font-weight: 500;
    display: flex;
    align-items: center;
    gap: 0.75rem;
    transition: all 0.3s ease;
    backdrop-filter: blur(10px);
    min-width: 250px;
    justify-content: center;
}

.btn-login:hover {
    background: rgba(255, 255, 255, 0.2);
    border-color: rgba(255, 255, 255, 0.4);
    transform: translateY(-2px);
}

.progress-actions {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
}

.progress-bar {
    width: 200px;
    height: 4px;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 2px;
    overflow: hidden;
}

.progress-fill {
    height: 100%;
    background: linear-gradient(90deg, #4ade80, #22c55e);
    border-radius: 2px;
    transition: width 0.6s ease;
}

.progress-text {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.9rem;
    font-weight: 500;
}

/* Floating Elements  */

.floating-elements {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    pointer-events: none;
    z-index: 2;
}

.floating-element {
    position: absolute;
    font-size: 1.5rem;
    opacity: 0.2;
    animation: floatAround 10s ease-in-out infinite;
}

.element-1 {
    top: 20%;
    left: 10%;
    animation-delay: 0s;
}

.element-2 {
    top: 60%;
    right: 15%;
    animation-delay: 2s;
}

.element-3 {
    bottom: 30%;
    left: 20%;
    animation-delay: 4s;
}

.element-4 {
    top: 40%;
    right: 30%;
    animation-delay: 6s;
}

@keyframes floatAround {
    0%, 100% { 
        transform: translateY(0px) rotate(0deg); 
        opacity: 0.2; 
    }
    25% { 
        transform: translateY(-20px) rotate(90deg); 
        opacity: 0.4; 
    }
    50% { 
        transform: translateY(-10px) rotate(180deg); 
        opacity: 0.3; 
    }
    75% { 
        transform: translateY(-30px) rotate(270deg); 
        opacity: 0.5; 
    }
}

/* Responsive Design  */

@media (max-width: 768px) {
    .onboarding-header {
        padding: 1.5rem;
    }
    
    .onboarding-content {
        padding: 1rem;
    }
    
    .slide-container {
        height: 450px;
    }
    
    .slide-title {
        font-size: 2rem;
    }
    
    .main-icon {
        font-size: 4rem;
    }
    
    .slide-navigation {
        gap: 1rem;
    }
    
    .nav-btn {
        width: 40px;
        height: 40px;
        font-size: 1rem;
    }
    
    .final-actions {
        width: 100%;
    }
    
    .btn-get-started,
    .btn-login {
        width: 100%;
        max-width: 300px;
    }
}

@media (max-width: 480px) {
    .onboarding-header {
        padding: 1rem;
    }
    
    .slide-title {
        font-size: 1.8rem;
    }
    
    .slide-description {
        font-size: 1rem;
    }
    
    .main-icon {
        font-size: 3.5rem;
    }
    
    .slide-features {
        gap: 0.5rem;
    }
    
    .feature-item {
        padding: 0.5rem 1rem;
        font-size: 0.9rem;
    }
}

/* ===== ONBOARDING MODE STYLES =====  */

.main-content.onboarding-mode {
    padding: 0;
    min-height: 100vh;
}

.onboarding-mode .onboarding-container {
    min-height: 100vh;
}

/* ===== NEW ONBOARDING SCREEN STYLES =====  */

/* CSS Variables for Onboarding  */

.main-content.onboarding-mode {
    --primary-gradient-start: #00bcd4;
    --primary-gradient-end: #00e676;
    --secondary-text-color: #4A5568;
    --glass-background: rgba(255, 255, 255, 0.3);
    --shadow-color: rgba(0, 0, 0, 0.1);
}

/* Body and Background - High Specificity  */

.App .main-content.onboarding-mode {
    padding: 0 !important;
    min-height: 100vh !important;
    display: flex !important;
    justify-content: center !important;
    align-items: center !important;
    background: linear-gradient(135deg, #E0B3FF 0%, #B3E0FF 50%, #FFB3E0 100%) !important;
    overflow: hidden !important;
    position: relative !important;
    flex: none !important;
}

/* Bokeh Effects - Multiple floating elements  */

.main-content.onboarding-mode::before,
.main-content.onboarding-mode::after {
    content: '';
    position: absolute;
    border-radius: 50%;
    filter: blur(60px);
    opacity: 0.4;
    z-index: 1;
    animation: bokehFloat 8s ease-in-out infinite;
}

.main-content.onboarding-mode::before {
    width: 300px;
    height: 300px;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.4) 0%, transparent 70%);
    top: -10%;
    left: -10%;
    animation-delay: 0s;
}

.main-content.onboarding-mode::after {
    width: 250px;
    height: 250px;
    background: radial-gradient(circle, rgba(255, 255, 255, 0.3) 0%, transparent 70%);
    bottom: -10%;
    right: -10%;
    animation-delay: 4s;
}

/* Additional bokeh elements  */

.main-content.onboarding-mode {
    position: relative;
}

.main-content.onboarding-mode .onboarding-app-container::before,
.main-content.onboarding-mode .onboarding-app-container::after {
    content: '';
    position: absolute;
    border-radius: 50%;
    filter: blur(40px);
    opacity: 0.3;
    z-index: 0;
    animation: bokehFloat 6s ease-in-out infinite;
}

.main-content.onboarding-mode .onboarding-app-container::before {
    width: 120px;
    height: 120px;
    background: rgba(255, 255, 255, 0.3);
    top: 20%;
    right: -20px;
    animation-delay: 2s;
}

.main-content.onboarding-mode .onboarding-app-container::after {
    width: 80px;
    height: 80px;
    background: rgba(255, 255, 255, 0.2);
    bottom: 30%;
    left: -15px;
    animation-delay: 6s;
}

@keyframes bokehFloat {
    0%, 100% { 
        transform: translateY(0px) translateX(0px) scale(1);
        opacity: 0.3;
    }
    25% { 
        transform: translateY(-20px) translateX(10px) scale(1.1);
        opacity: 0.5;
    }
    50% { 
        transform: translateY(-10px) translateX(-5px) scale(0.9);
        opacity: 0.4;
    }
    75% { 
        transform: translateY(15px) translateX(-10px) scale(1.05);
        opacity: 0.6;
    }
}

/* App Container  */

.onboarding-app-container {
    width: 375px !important;
    height: 812px !important;
    background: rgba(255, 255, 255, 0.15) !important;
    border-radius: 45px !important;
    box-shadow: 0 20px 60px rgba(0, 0, 0, 0.15) !important;
    overflow: hidden !important;
    position: relative !important;
    border: 3px solid rgba(255, 255, 255, 0.4) !important;
    display: flex !important;
    flex-direction: column !important;
    z-index: 10 !important;
    backdrop-filter: blur(25px) !important;
    margin: 0 auto !important;
}

/* Status Bar  */

.onboarding-status-bar {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding: 15px 25px;
    color: #2D3748;
    font-size: 16px;
    background: transparent;
    border-top-left-radius: 45px;
    border-top-right-radius: 45px;
    position: relative;
    z-index: 10;
}

.onboarding-time {
    font-weight: 600;
    font-size: 16px;
    color: #2D3748;
}

.onboarding-signal,
.onboarding-battery {
    font-weight: 600;
    display: flex;
    align-items: center;
    gap: 8px;
}

.onboarding-signal {
    display: flex;
    align-items: flex-end;
    gap: 2px;
}

.onboarding-signal span {
    display: inline-block;
    width: 3px;
    background-color: #2D3748;
    border-radius: 1px;
}

.onboarding-signal span:nth-child(1) { height: 4px; }
.onboarding-signal span:nth-child(2) { height: 6px; }
.onboarding-signal span:nth-child(3) { height: 8px; }
.onboarding-signal span:nth-child(4) { height: 10px; }

.onboarding-battery {
    position: relative;
}

.onboarding-battery::before {
    content: '';
    width: 24px;
    height: 12px;
    border: 2px solid #2D3748;
    border-radius: 2px;
    position: relative;
    background: linear-gradient(90deg, #10B981 0%, #10B981 80%, transparent 80%);
}

.onboarding-battery::after {
    content: '';
    width: 2px;
    height: 6px;
    background: #2D3748;
    border-radius: 0 1px 1px 0;
    position: absolute;
    right: -2px;
    top: 50%;
    transform: translateY(-50%);
}

/* Main Card  */

.onboarding-card {
